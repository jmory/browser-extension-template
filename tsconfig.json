{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "DOM",
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "exclude": [
    "node_modules",
    "distribution",
  ],
  "include": [
    "./src/**/*",
    "./generate-manifest.ts",
    "./vitest.config.ts"
  ]
}
